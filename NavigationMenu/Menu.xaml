<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="200"
    Height="300">
    <StackPanel>
        <ItemsControl ItemsSource="{Binding DataContext.Items, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        MaxWidth="120"
                        Margin="3"
                        Command="{Binding DataContext.Request, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"
                        CommandParameter="{Binding Command}"
                        Content="{Binding Text}"
                        IsEnabled="{Binding IsEnabled}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>


</UserControl>